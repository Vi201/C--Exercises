/******************************************************************************
Write a program that will compute the total sales tax on a $95 purchase. Assume
the state sales tax is 4 percent, and the county sales tax is 2 percent.
*******************************************************************************/

#include <iostream>
using namespace std;

int main()
{
    // variables
    double stateSalesTax = 0.04, countySalesTax = 0.02, stateTax, countyTax;
    int totalPurchase = 95;
    
    cout << "Total Tax " << endl;
    cout << "----------" << endl;
    
    // Calculate the tax
    stateTax = totalPurchase * stateSalesTax; 
    countyTax = totalPurchase * countySalesTax;
    
    // Display
    cout << "State Tax: " << stateTax << endl;
    cout << "County Tax: " << countyTax;
    return 0;
}
