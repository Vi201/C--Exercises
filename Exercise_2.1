/******************************************************************************
Write a program that store the integers 50 and 100 in variables, and stores the
sum of these two in a variable named total. 
*******************************************************************************/

#include <iostream>
using namespace std;

int main()
{
    // variables
    int num1 = 100, num2 = 50, sum;
    
    // Calculate the sum of the two numbers
    sum = num1 + num2;
    
    // Displays the result
    cout << "The sum of 100 and 50 is: " << sum;
    return 0;
}
